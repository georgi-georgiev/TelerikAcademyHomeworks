@{
    ViewBag.Title = "Index";
}

<h2>Bit Calculator</h2>

@using(Html.BeginForm("Convert", "Calculate", FormMethod.Post))
{
    <div>Quantity</div>
    @Html.TextBox("quantity")
    <div>Type</div>
    @Html.DropDownList("Types")
    <div>Kilo</div>
    @Html.DropDownList("Kilo", new List<SelectListItem>() { new SelectListItem() { Text = "1024", Value = "1024" }, new SelectListItem(){ Text="1000", Value="1000" }})
    <div>
        <input type="submit" value="Go" />
    </div>
}
@if (ViewBag.Results != null)
{
    <table class="table table-hover table-condensed">
        @for (int i = 0; i < ViewBag.Results.Count; i++)
        {
            <tr>
                <td>@ViewBag.Results[i].Name</td>
                <td>@ViewBag.Results[i].Size</td>
            </tr>
        }
    </table>
}
